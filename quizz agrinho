<body>

  <h1>üåæ Quiz de Agropecu√°ria</h1>
  <div id="quiz-container"></div>
  <div class="resultado" id="resultado"></div>

  <script>
    const perguntas = [
      {
        pergunta: "Qual √© a principal produ√ß√£o agr√≠cola no Brasil?",
        opcoes: ["Soja", "Trigo", "Caf√©", "Milho"],
        resposta: "Soja"
      },
      {
        pergunta: "Onde ocorre a maior parte da produ√ß√£o de gado no Brasil?",
        opcoes: ["Manaus", "Paran√°", "Mato Grosso", "S√£o Paulo"],
        resposta: "Mato Grosso"
      },
      {
        pergunta: "Qual a pr√°tica para diminuir a polui√ß√£o na agrciultura?",
        opcoes: ["Queimadas para limpar terrenos", "Uso de agrot√≥xicos", "Destina√ß√£o correta de res√≠duos", "Desmatamento"],
        resposta: "Destina√ß√£o correta de res√≠duos"
      },
      {
        pergunta: "Qual animal √© mais consumido no Brasil?",
        opcoes: ["Cachorro", "Galinha/Frango", "Vaca", "Carneiro"],
        resposta: "Galinha/Frango"
      }
    ];

    let perguntaAtual = 0;
    let pontuacao = 0;

    function carregarPergunta() {
      const container = document.getElementById("quiz-container");
      container.innerHTML = "";

      if (perguntaAtual < perguntas.length) {
        const q = perguntas[perguntaAtual];
        const divPergunta = document.createElement("div");
        divPergunta.className = "pergunta";
        divPergunta.innerHTML = `<h3>${q.pergunta}</h3>`;

        q.opcoes.forEach(opcao => {
          const botao = document.createElement("button");
          botao.textContent = opcao;
          botao.onclick = () => verificarResposta(opcao);
          divPergunta.appendChild(botao);
        });

        container.appendChild(divPergunta);
      } else {
        mostrarResultado();
      }
    }

    function verificarResposta(respostaSelecionada) {
      const respostaCorreta = perguntas[perguntaAtual].resposta;
      if (respostaSelecionada === respostaCorreta) {
        pontuacao++;
        alert("‚úÖ Certo!");
      } else {
        alert(`‚ùå Errado! `);
      }

      perguntaAtual++;
      carregarPergunta();
    }

    function mostrarResultado() {
      const container = document.getElementById("quiz-container");
      container.innerHTML = "";
      document.getElementById("resultado").textContent =
        `üéâ Voc√™ acertou ${pontuacao} de ${perguntas.length} perguntas.`;
    }

    // Iniciar o quiz
    carregarPergunta();
  </script>
